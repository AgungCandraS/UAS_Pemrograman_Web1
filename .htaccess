Options -Indexes

<IfModule mod_rewrite.c>
    RewriteEngine On

    # Force HTTPS (optional, boleh tetap pakai)
    RewriteCond %{HTTPS} off
    RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # Jika akses root domain, arahkan ke app
    RewriteRule ^$ bisnisku-web-app/public/ [L,R=302]

    # Semua request lain (kecuali file/folder nyata) arahkan ke app juga
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ bisnisku-web-app/public/$1 [L]
</IfModule>
